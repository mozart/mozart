SRCTOP=         @SRCTOP@
BUILDTOP=       @BUILDTOP@
PREFIX=         @prefix@
SRCDIR=         @srcdir@
VPATH=          @srcdir@
BINDIR=         $(PREFIX)/bin

CC=             @CC@
CXX=            @CXX@

@SET_MAKE@
LN_S=           @LN_S@
INSTALL=        @INSTALL@
INSTALL_DIR=    @INSTALL_DIR@
INSTALL_BIN=    $(INSTALL) -m 555

SCRIPTS=        oz ozplatform ozwindynld send-pr ozdynld
LINKS=          ozengine text2pickle pickle2text oldpickle2text oztool
LIB_SCRIPTS=    $(addprefix $(BINDIR)/,$(SCRIPTS))
LIB_LINKS=      $(addprefix $(BINDIR)/,$(LINKS))

WINEXES=        setup.exe oz.exe ozengine.exe
MSWIN=          @MSWIN@

.PHONY: bootstrap all install clean veryclean distclean depend check

all:

oz:
        true

bootstrap:

ifeq ($(MSWIN),yes)

install: $(WINEXES)
        $(INSTALL_DIR) $(PREFIX)/winbin
        $(INSTALL_BIN) oz.exe oz.ico setup.exe setup.ico ozc.bat ozengine.exe \
                        $(PREFIX)/winbin

all: $(WINEXES)

else

install: $(BINDIR) $(LIB_SCRIPTS) $(LIB_LINKS)

endif


$(LIB_SCRIPTS): $(BINDIR)/% : %
        $(INSTALL_BIN) $< $(BINDIR)

$(LIB_LINKS): $(BINDIR)/oz
        cd $(BINDIR); rm -f $@; $(LN_S) oz $@

$(BINDIR):
        $(INSTALL_DIR) $@

veryclean: clean

distclean: clean
        rm -f Makefile


clean:
        rm -f *.o *.exe *.obj *.sym *.map *.mk* *.lk* *.err oz.res setup.res version.h

Makefile: Makefile.in ../config.status
        cd .. && ./config.status

../config.status: ../configure
        cd .. && ./config.status --recheck

check:

depend:



#
# Windows
#

ifeq ($(MSWIN),yes)

setup.cc oz.cc ozengine.cc: version.h

ozengine.exe: ozengine.o
        $(CC) -s -o $@ $<

oz.exe: oz.o
        $(CC) -s -o $@ $< -mwindows

setup.exe: setup.o
        $(CC) -s -o $@ $< -mwindows


version.h: $(SRCTOP)/OZVERSION
        echo "#define OZVERSION \"`$<`\"" > $@


endif
